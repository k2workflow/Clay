<Project Sdk="Microsoft.NET.Sdk">

  <!-- Common properties defined in Directory.Build.props -->

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyName>SourceCode.Clay.Algorithms</AssemblyName>
    <RootNamespace>SourceCode.Clay.Algorithms</RootNamespace>
    <DocumentationFile>SourceCode.Clay.Algorithms.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="SourceCode.Clay.Algorithms.xml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Net.Compilers" Version="2.9.0" PrivateAssets="All" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.6.2" PrivateAssets="All" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta-63127-02" PrivateAssets="All" />
  </ItemGroup>

  <PropertyGroup>
    <PackageId>SourceCode.Clay.Algorithms</PackageId>
    <Authors>SourceCode</Authors>
    <Description>Tools and extensions to the .Net framework.</Description>
    <PackageTags>clay utility extension</PackageTags>
    <Version>1.0.0-local</Version>
    <PackageVersion>1.0.0-local</PackageVersion>
  </PropertyGroup>

</Project>
