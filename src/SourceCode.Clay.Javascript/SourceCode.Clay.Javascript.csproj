<Project Sdk="Microsoft.NET.Sdk">

  <!-- Common properties defined in Directory.Build.props -->

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyName>SourceCode.Clay.Javascript</AssemblyName>
    <RootNamespace>SourceCode.Clay.Javascript</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <!-- CA1716	CLI holdover -->
    <!-- CA1010	Collection initializer hack requires implementing IEnumerable. -->
    <!-- CA1033	Types are not sealed for extensibility. -->
    <!-- CA2225	Constructors are To/From. -->
    <!-- CA1043	Fluent interface. -->
    <!-- CA1044	Fluent interface. -->
    <NoWarn>$(NoWarn);CA1716;CA1010;CA1033;CA2225;CA1044;CA1043</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.6.3" PrivateAssets="All" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta2-18618-05" PrivateAssets="All" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.1" />
    <PackageReference Include="System.Threading.Tasks.Extensions" Version="4.5.2" />
  </ItemGroup>

  <PropertyGroup>
    <PackageId>SourceCode.Clay.Javascript</PackageId>
    <Authors>SourceCode</Authors>
    <Description>Ecmascript AST.</Description>
    <PackageTags>clay javascript ast estree</PackageTags>
    <Version>1.0.0-local</Version>
    <PackageVersion>1.0.0-local</PackageVersion>
  </PropertyGroup>

</Project>
